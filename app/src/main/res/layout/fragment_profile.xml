<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/profile_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1" >

    <ImageView
        android:id="@id/gradient_profile_background"
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@null"
        android:src="@drawable/gradient_background" />

    <LinearLayout
        android:id="@id/linearLayout1"
        android:layout_width="120dip"
        android:layout_height="120dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/white_background" >

        <TextView
            android:id="@id/avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dip"
            android:background="@drawable/blood_avatar"
            android:contentDescription="@null"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:text="@string/dummy_blood_group_ID"
            android:textColor="#f1f1f1"
            android:textSize="75sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:text="@string/dummy_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00d8ff"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@id/profile_details_header_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/username"
        android:layout_marginTop="5dip"
        android:background="#00000000"
        android:orientation="vertical" >

        <RelativeLayout
             android:id="@id/profile_header_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#cc3333"
            android:orientation="horizontal" >

            <TextView
                android:id="@id/profile_details"
                style="@style/ActionBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:clickable="false"
                android:gravity="left|center"
                android:text="@string/profile_details"
                android:textColor="#f8f8f8"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@id/profile_edit"
                style="@style/ActionBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dip"
                android:clickable="true"
                android:gravity="right|center"
                android:text="@string/profile_edit"
                android:textColor="#f8f8f8"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ScrollView
            android:id="@id/profile_details_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f9f9f9" >

            <LinearLayout
                android:id="@id/profile_details_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@id/profile_full_name_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/full_name"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@id/profile_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="@string/dummy_full_name"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@id/profile_number_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_margin="10dip"
                    android:background="@drawable/feed__list_item_background"
                    android:orientation="vertical" />

                <TextView
                    android:id="@id/profile_mobile_number_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mobile_number"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@id/profile_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="@string/dummy_mobile_number_ID"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@id/profile_area_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_margin="10dip"
                    android:background="@drawable/feed__list_item_background"
                    android:orientation="vertical" />

                <TextView
                    android:id="@id/profile_area_name_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/area_name"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@id/profile_area_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="@string/dummy_area_name_ID"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@id/profile_blood_group_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_margin="10dip"
                    android:background="@drawable/feed__list_item_background"
                    android:orientation="vertical" />

                <TextView
                    android:id="@id/profile_blood_group_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/blood_group"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@id/profile_blood_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="@string/dummy_blood_group_ID"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_margin="10dip"
                    android:background="#00000000"
                    android:orientation="vertical" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>