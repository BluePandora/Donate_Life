<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#e5e5e5" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
        android:padding="8.0dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/panel"
            android:orientation="vertical" >

            <com.widget.CustomTextView
                style="@style/Text.Description"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1.0"
                android:paddingBottom="8.0dip"
                android:paddingLeft="12.0dip"
                android:paddingRight="12.0dip"
                android:paddingTop="12.0dip"
                android:text="@string/register_sms_one_time" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.0dip"
            android:background="@drawable/panel"
            android:orientation="vertical" >

            <com.widget.CustomTextView
                style="@style/Text.Description"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1.0"
                android:paddingBottom="0.0dip"
                android:paddingLeft="12.0dip"
                android:paddingRight="12.0dip"
                android:paddingTop="12.0dip"
                android:text="@string/register_phone_number_code_confirm" />

            <com.widget.CustomTextView
                android:id="@+id/register_phone_country"
                style="@style/Text.FieldHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/registration_country"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16.0dip"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:ellipsize="end"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:inputType="none"
                android:prompt="@string/spinner_prompt"
                android:singleLine="true" />

            <com.widget.CustomTextView
                android:id="@+id/register_phone_country_code"
                style="@style/MuseoSansRounded_300_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/registration_fields"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16.0dip"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <com.widget.CustomTextView
                    style="@style/MuseoSansRounded_300_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/plus"
                    android:textColor="#ffb8b8b8"
                    android:textSize="20.0sp" />

                <com.widget.CustomTextView
                    android:id="@+id/registration_cc"
                    style="@style/MuseoSansRounded_300_text"
                    android:layout_width="54.0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:clickable="true"
                    android:singleLine="true"
                    android:textColor="#ff880000"
                    android:textSize="20sp" />

                <com.widget.CustomEditText
                    android:id="@+id/registration_phone"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:hint="@string/dummy_mobile_number_ID"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textColor="#ff000000"
                    android:textColorHint="#ff888888"
                    app:font="MuseoSansRounded-300.otf" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/registration_password_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16.0dip"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <com.widget.CustomTextView
                    android:id="@+id/TextView01"
                    style="@style/MuseoSansRounded_300_text"
                    android:layout_width="54.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/password_field"
                    android:textColor="#ff020202"
                    android:textSize="@dimen/pass_dimen"
                    android:textStyle="bold" />

                <com.widget.CustomEditText
                    android:id="@+id/check_reg_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dip"
                    android:layout_marginStart="18dip"
                    android:layout_weight="1"
                    android:digits="0123456789qwertzuiopasdfghjklyxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                    android:ems="10"
                    android:hint="@string/register_password"
                    android:imeOptions="actionDone"
                    android:inputType="textWebPassword"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingEnd="32.0sp"
                    android:paddingLeft="10.0sp"
                    android:paddingRight="32.0sp"
                    android:paddingStart="10.0sp"
                    android:singleLine="true"
                    android:textColor="#ff000000"
                    android:textColorHint="#ff888888"
                    app:font="MuseoSansRounded-300.otf" />
            </LinearLayout>

            <com.widget.CustomButton
                android:id="@+id/registration_submit"
                style="@style/MuseoSansRounded_700_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/btn_blue"
                android:minHeight="0.0dip"
                android:text="@string/Ok"
                android:textSize="17.0sp" />

            <com.widget.CustomTextView
                android:id="@+id/warningText"
                style="@style/MuseoSansRounded_300_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/Warning_no_number"
                android:textColor="#ff880000"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>