<?xml version="1.0" encoding="utf-8"?>
<com.widget.CustomScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e5e5e5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@id/blood_request_district_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="30dip"
            android:background="@drawable/panel"
            android:gravity="center">

            <Spinner
                android:id="@id/district_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:spinnerMode="dialog" />

            <com.widget.CustomTextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:text="@string/select_area"
                android:textAppearance="?android:attr/textAppearanceLarge"
                custom:font="MuseoSansRounded-700.otf" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/panel"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.widget.CustomTextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/blood_group_spinner"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/blood_group_spinner"
                    android:layout_marginTop="5dip"
                    android:text="@string/select_blood_group"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    custom:font="MuseoSansRounded-700.otf" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="#b5b5b5"
                    android:visibility="visible" />

                <Spinner
                    android:id="@id/blood_group_spinner"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="5dip"
                    android:clickable="true"
                    android:spinnerMode="dialog" />

                <com.widget.CustomTextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/amount_spinner"
                    android:layout_alignStart="@+id/amount_spinner"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="5dip"
                    android:text="@string/select_amount"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    custom:font="MuseoSansRounded-700.otf" />

                <Spinner
                    android:id="@id/amount_spinner"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/textView3"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="5dip" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/panel"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.widget.CustomTextView
                android:id="@+id/textView5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:text="@string/select_hospital"
                android:textAppearance="?android:attr/textAppearanceLarge"
                custom:font="MuseoSansRounded-700.otf" />

            <Spinner
                android:id="@id/hospital_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView5"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:spinnerMode="dialog" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/panel"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/emergency_checkBox_holder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:layout_marginBottom="20dip"
                android:gravity="center">

                <com.widget.CustomCheckBox
                    android:id="@id/emergency_checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="@string/emergency_request"
                    android:textColor="#ff3333"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    custom:font="MuseoSansRounded-700.otf" />
            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_below="@+id/emergency_checkBox_holder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:orientation="horizontal"
                android:gravity="center">


                <com.widget.CustomCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/emergency_sms"
                    android:textColor="#ff3333"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    custom:font="MuseoSansRounded-700.otf"
                    android:id="@+id/emergency_sms_checkbox" />

            </LinearLayout>

            <com.widget.CustomButton
                android:id="@id/done_button"
                style="@style/MuseoSansRounded_700_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:background="@drawable/btn_blue"
                android:text="@string/request_server"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</com.widget.CustomScrollView>