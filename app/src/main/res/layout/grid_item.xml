<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="2.5dip"
        android:background="@drawable/red_panel"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_gravity="center"
            android:layout_weight="1">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dip"
                android:layout_centerVertical="true"
                android:tint="#dddddd"
                android:layout_height="wrap_content"
                android:src="@drawable/log_in_screen_logo" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1">

            <com.widget.CustomTextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="#dddddd"
                android:text="12-12-12"
                android:textSize="25dip"
                app:font="Roboto-Light.ttf" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@id/option_button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="5dip"
        android:paddingRight="5dip"
        android:paddingTop="5dip"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:contentDescription="@null"
        android:src="@drawable/feed_item_popup" />
</RelativeLayout>