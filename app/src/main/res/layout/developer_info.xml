<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.makeramen.RoundedImageView
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_marginBottom="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="15dip"
                android:src="@drawable/the_doctor"
                android:tint="#44123456"
                app:oval="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center"
                android:orientation="vertical">

                <com.widget.CustomButton
                    android:id="@id/the_doctor_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:text="@string/the_doctor"
                    android:textSize="26sp"
                    app:font="MuseoSansRounded-300.otf" />

                <com.widget.CustomButton
                    android:id="@id/the_doctor_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dip"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:text="@string/the_doctor_email"
                    android:textSize="15sp"
                    app:font="MuseoSansRounded-300.otf" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dip"

            android:orientation="horizontal">

            <com.makeramen.RoundedImageView
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:layout_marginBottom="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="15dip"
                android:src="@drawable/coder_bd"
                android:tint="#44654321"
                app:oval="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dip"
                android:gravity="center"
                android:orientation="vertical">

                <com.widget.CustomButton
                    android:id="@id/coder_bd_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:text="@string/coder_bd"

                    android:textSize="26sp"
                    app:font="MuseoSansRounded-300.otf" />

                <com.widget.CustomButton
                    android:id="@id/coder_bd_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dip"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:text="@string/coder_bd_email"
                    android:textSize="15sp"
                    app:font="MuseoSansRounded-300.otf" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>