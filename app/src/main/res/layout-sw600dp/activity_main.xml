<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5"
    android:orientation="horizontal"
    tools:context="com.project.bluepandora.donatelife.activities.MainActivity"
    tools:ignore="MergeRootFrame">
    <!-- FrameLayout to display Fragments -->
    <android.support.v4.widget.SlidingPaneLayout
        android:id="@+id/slider_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="250dip"
            android:layout_height="match_parent"
            android:background="@drawable/list_view_back_selected">

            <FrameLayout
                android:id="@id/slide_menu_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/abc_action_bar_default_height_material" />

            <FrameLayout
                android:id="@+id/small_menu_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_marginTop="@dimen/abc_action_bar_default_height_material" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="75dip"
            android:background="#00000000"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@id/frame_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <!-- FrameLayout to to display slider menu -->
        </LinearLayout>

    </android.support.v4.widget.SlidingPaneLayout>
</LinearLayout>